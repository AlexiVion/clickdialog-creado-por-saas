---
import DashboardLayout from "../../layouts/DashboardLayout.astro";
---
<DashboardLayout title="Chatbots Â· ClickDialog">
  <div class="card">
    <h1 style="margin:0 0 8px 0;">Chatbots</h1>
    <p class="muted" style="margin:0 0 14px 0;">Threads de ejemplo desde el backend.</p>
    <button id="btn" class="btn primary" type="button">Cargar</button>
    <pre id="out" style="margin-top: 12px; white-space: pre-wrap;"></pre>
  </div>

  <script>
    const btn = document.getElementById("btn");
    const out = document.getElementById("out");
    btn.addEventListener("click", async () => {
      out.textContent = "Cargando...";
      const res = await fetch("http://localhost:5005/api/chatbot/threads");
      const j = await res.json();
      out.textContent = JSON.stringify(j, null, 2);
    });
  </script>
</DashboardLayout>
